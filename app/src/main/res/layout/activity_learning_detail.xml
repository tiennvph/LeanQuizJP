<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LearningDetailActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:number_of_tabs="three"
        app:starting_position="one"
        app:tab_color="@color/colorPrimaryDark"
        app:button_color="@color/bgBottomNavigation"
        app:text_color="@color/dark_black"
        app:icon_one="@drawable/word_icon"
        app:icon_two="@drawable/grammar_icon"
        app:icon_three="@drawable/kanji_icon"
        app:text_one="New Word"
        app:text_two="Grammar"
        app:text_three="Kanji"/>

</android.support.design.widget.CoordinatorLayout>